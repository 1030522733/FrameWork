<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/iv_home_menu"
        android:layout_width="25dp"
        android:layout_height="28dp"
        android:layout_marginStart="20dp"
        android:contentDescription="@string/description"
        android:src="@mipmap/icon_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_home_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_home_menu"
        app:layout_constraintLeft_toRightOf="@id/iv_home_menu"
        app:layout_constraintTop_toTopOf="@id/iv_home_menu" />

    <ImageView
        android:id="@+id/iv_home_function"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/description"
        app:layout_constraintBottom_toBottomOf="@id/iv_home_menu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_home_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>