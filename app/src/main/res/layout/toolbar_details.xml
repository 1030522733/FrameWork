<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/themeColor">

    <ImageView
        android:id="@+id/iv_details_back"
        android:layout_width="25dp"
        android:layout_height="28dp"
        android:layout_marginStart="20dp"
        android:contentDescription="@string/description"
        android:src="@mipmap/icon_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.framework.ui.vv.SampleTextVIew
        android:id="@+id/tv_details_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="50dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_details_back"
        app:layout_constraintTop_toTopOf="@id/iv_details_back" />

    <ImageView
        android:id="@+id/iv_details_menu"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/description"
        android:src="@mipmap/icon_more"
        app:layout_constraintBottom_toBottomOf="@id/iv_details_back"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_details_back" />

</androidx.constraintlayout.widget.ConstraintLayout>